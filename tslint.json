{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-prettier",
    "tslint-config-airbnb", // tslint + tslint-consistent-codestyle + tslint-eslint-rules + tslint-microsoft-contrib
    "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    "max-line-length": false,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-unused-variable": false, // TS2.9부터 deprecated
    "ordered-imports": true,
    "quotemark": [true, "single", "jsx-double"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],

    // tslint-microsoft-contrib
    "function-name": [
      true,
      {
        "function-regex": "^[\\w\\d]+$",
        "static-method-regex": "^[\\w\\d]+$"
      }
    ],
    "import-name": false, // import 할 때 file 이름과 변수 이름을 통일하라는 rule

    // tslint-react
    "jsx-alignment": true,
    "jsx-boolean-value": [true, "never"],
    "jsx-no-multiline-js": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["node_modules"]
  }
}
